<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sethi.user_info.Main2Activity"
    android:background="@drawable/q4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_dob_detail"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@+id/ll_age_detail"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20dp"
                android:textColor="#b10909" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_name_detail"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="0.02">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Hello !  "
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#150101" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_age_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_name_detail"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Roll No"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="italic"
                android:layout_weight="0.19" />

            <TextView
                android:id="@+id/rollno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.68"
                android:textSize="20sp"
                android:textColor="#FF1F0202"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00:00"
                android:id="@+id/main_timer_text"
                android:textStyle="bold"
                android:textColor="#06159a"
                android:textSize="@dimen/design_fab_content_size" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Answer"
                android:textColor="#000000"
                android:textSize="24dp"
                android:id="@+id/question"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="158dp"
            android:layout_height="146dp">

            <RadioGroup
                android:id="@+id/rgOpinion"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="#B6BAC6"
                    android:textSize="20dp"
                    android:id="@+id/A"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textColor="#B6BAC6"
                    android:textSize="20dp"
                    android:id="@+id/B"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textColor="#B6BAC6"
                    android:textSize="20dp"
                    android:id="@+id/C"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textColor="#B6BAC6"
                    android:textSize="20dp"
                    android:id="@+id/D"
                    android:checked="false" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/sbmt"
                android:background="#f9f3bd" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.30"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="118dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="86dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="251dp"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <ImageSwitcher
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageSwitcher" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/iiitd" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>