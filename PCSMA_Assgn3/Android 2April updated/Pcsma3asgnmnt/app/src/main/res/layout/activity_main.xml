<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/q10">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/mail"
                android:textColor="#0c2779"
                android:layout_width="117dp"
                android:layout_height="45dp"
                android:text="Email-Id :"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/edt_dob"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.02" />

            <TextView
                android:id="@+id/email"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/roll"
                android:layout_below="@+id/etName"
                android:textColor="#460707"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="86dp"
                android:layout_height="match_parent"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="WELCOME TO QUIZ WORLD"
                android:id="@+id/textView6"
                android:textColor="#fbe919"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColorHighlight="#f80f0f" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="99dp"
                android:layout_height="match_parent"></LinearLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#03fe25"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/etName"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.12">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_weight="0.57"></LinearLayout>

            <EditText
            android:id="@+id/etName"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:textColor="#f48b4a"
            android:layout_toRightOf="@+id/tvName"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="120dp"
                android:layout_height="match_parent"></LinearLayout>

            <TextView
            android:id="@+id/roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:text="Roll no."
            android:textColor="#03fe25"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/etRoll"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:weightSum="1"
            android:layout_weight="0.13">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"></LinearLayout>

            <EditText
            android:id="@+id/etRoll"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/roll"
            android:layout_below="@+id/etName"
                android:layout_weight="0.24"
                android:textColor="#f48b4a" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:weightSum="1"
            android:layout_weight="0.11">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="0.57" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START QUIZ"
                android:background="#0cf6fe"
                android:id="@+id/nxt"
                android:layout_weight="0.07" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08">

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLEAR"
                android:background="#b7c4f0"
                android:id="@+id/clr"
                android:layout_weight="0.03" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="31dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="154dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
